{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "ballerina",
            "request": "launch",
            "name": "Ballerina Debug",
            "program": "${workspaceFolder}/backend/src/main.bal",  // Path to your main Ballerina file
            "args": [],                                           // Command-line arguments (if any)
            "env": {                                              // Environment variables (optional)
                "BALLERINA_HOME": "/path/to/ballerina"            // Update with your Ballerina SDK path
            },
            "stopOnEntry": false,                                 // Pauses execution at the start (set to true for initial debugging)
            "console": "integratedTerminal",                      // Uses VS Code's integrated terminal
            "preLaunchTask": "build",                            // Optional: Runs a build task before launching
            "internalConsoleOptions": "neverOpen"                 // Prevents opening the debug console automatically
        }
    ]
}